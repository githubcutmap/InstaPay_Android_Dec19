<!-- add some padding for text inside -->
<padding
    android:bottom="10dp"
    android:left="10dp"
    android:right="10dp"
    android:top="10dp" />

<!-- we define corner radius, note that radius can be different for each corner -->
<corners android:radius="10dp" />

</shape>