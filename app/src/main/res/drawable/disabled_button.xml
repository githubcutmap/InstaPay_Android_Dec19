<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#fff" />
            <gradient android:angle="-90" android:startColor="@color/grey_colour" android:endColor="@color/silver_colour"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/grey_colour" />
            <solid android:color="@color/silver_colour"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#fff" />
            <gradient android:angle="90" android:startColor="@color/silver_colour" android:endColor="@color/grey_colour" />
        </shape>
    </item>

</selector>