    <style name="Theme_RJDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorOnPrimary">@color/colorPrimary</item>

    </style>

    <style name="tf">
        <item name="color">@color/grayblack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="biller">
