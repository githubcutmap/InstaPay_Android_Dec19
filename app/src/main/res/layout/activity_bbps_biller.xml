<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lightcolor">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/lightcream">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="BHARAT BILLPAY PAYMENT SYSTEM"
        android:fontFamily="@font/helveticaneuemed"
        android:textColor="@color/grayblack"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bbps_logo"
        android:padding="5dp"></ImageView>
</LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_margin="10dp"
                app:boxBackgroundColor="@color/white"
                android:backgroundTint="@color/orange"
                android:focusable="auto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/search_billacc">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/actv_billamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/biller"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>-->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_margin="10dp"
                app:boxBackgroundColor="@color/white"
                android:backgroundTint="@color/orange"
                android:focusable="auto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/search_billacc">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/actv_billamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="auto"
                    android:freezesText="true"
                    android:clickable="false"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Available Balance"
                android:fontFamily="@font/helveticaneuemedium"
                android:id="@+id/bal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/tv_avaliableBal"
                android:text=" "/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_margin="10dp"
                android:layout_marginTop="-10dp"
                app:boxBackgroundColor="@color/white"
                android:backgroundTint="@color/orange"
                android:focusable="auto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/search_billcategory">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/actv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="auto"
                    android:freezesText="true"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:clickable="false"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/amount_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="-10dp">
                <EditText
                    android:id="@+id/amountbill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Amount"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:background="@color/white"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_gravity="right"
                android:gravity="right">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:id="@+id/back"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:shadowColor="@color/gray_dark"
                    android:background="@color/white"></Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/proceed"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:text="PROCEED"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:shadowColor="@color/gray_dark"
                    android:background="@color/white"></Button>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancel"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:text="CANCEL"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:shadowColor="@color/gray_dark"
                    android:background="@color/white"></Button>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>