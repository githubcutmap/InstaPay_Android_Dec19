<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/lightcream">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BHARAT BILLPAY PAYMENT SYSTEM"
                android:fontFamily="@font/helveticaneuemed"
                android:textColor="@color/grayblack"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bbps_logo"
                android:padding="5dp"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Bill Details"
            android:fontFamily="@font/helveticaneubold"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_gravity="center"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/billpayments_editbox"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biller Coverage"
                android:fontFamily="@font/helveticaneubold"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_coverage"
                android:fontFamily="@font/helveticaneuemedium"
                android:textSize="14dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/billpayments_editbox"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biller Caregory"
                android:fontFamily="@font/helveticaneubold"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_category"
                android:fontFamily="@font/helveticaneuemedium"
                android:textSize="14dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/billpayments_editbox"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biller Name"
                android:fontFamily="@font/helveticaneubold"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_name"
                android:fontFamily="@font/helveticaneuemedium"
                android:textSize="14dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/billpayments_editbox"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number for SMS"
                android:fontFamily="@font/helveticaneubold"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobileno_sms"
                android:fontFamily="@font/helveticaneuemedium"
                android:textSize="14dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/billpayments_editbox"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumer Number"
                android:fontFamily="@font/helveticaneubold"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/consumer_no"
                android:fontFamily="@font/helveticaneuemedium"
                android:textSize="14dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/billpayments_editbox"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BU"
                android:fontFamily="@font/helveticaneubold"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bu"
                android:fontFamily="@font/helveticaneuemedium"
                android:textSize="14dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:gravity="right">

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/helveticaneuemedium"
                android:shadowColor="@color/gray_dark"
                android:text="BACK"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="GET DETAILS"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:shadowColor="@color/gray_dark"></Button>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>