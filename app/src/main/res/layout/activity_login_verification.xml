<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mint_logo" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/bentham"
        android:textStyle="bold"
        android:text="Resend OTP in 0 Sec"
        android:textColor="#000" />


    <TextView

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="OTP Has Been Sent To "
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/bentham"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/type"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email/Phone No."
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"/>
    <!--EditText
        android:layout_margin="10dp"
        android:id="@+id/subjectID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"/-->
    <!--EditText
        android:layout_margin="10dp"
        android:id="@+id/messageID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"/-->

    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/user_entered_otp"
        android:inputType="number"
        android:layout_margin="10dp"
        android:hint="Enter OTP"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLength="6"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button

            android:id="@+id/resend_btn"
            android:enabled="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentham"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="125dp"
            android:text="Resend"
            android:textColor="#fff"/>

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/verify"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/bentham"
            android:textStyle="bold"
            android:enabled="false"
            android:text="Verify" />

    </LinearLayout>







</LinearLayout>