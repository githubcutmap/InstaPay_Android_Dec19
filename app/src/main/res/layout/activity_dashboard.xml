                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_height="160dp"
                    android:layout_width="160dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll_aeps">
                    <ImageView
                        android:id="@+id/aeps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/bluecard"
                        app:srcCompat="@drawable/aeps"/>

                    <TextView
                        android:id="@+id/wd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bentham"
                        android:textStyle="bold"
                        android:gravity="center|bottom"
                        android:text="AEPS"
                        android:textColor="@color/maroon"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_height="160dp"
                    android:layout_width="160dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll_bbps">
                    <ImageView
                        android:id="@+id/bbps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:padding="18dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/greencard"
                        app:srcCompat="@drawable/bbps_logo" />

                    <TextView
                        android:id="@+id/aadharpay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bentham"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        android:text="            BBPS"
                        android:textColor="@color/maroon"
                        android:textSize="17sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_height="160dp"
                    android:layout_width="160dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll_card">
                    <ImageView
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_weight="1"
