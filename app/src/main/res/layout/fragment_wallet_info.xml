        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:background="@drawable/colour_4"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Transferred till date: "

                  android:fontFamily="@font/bentham"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/id_amountTransferTillDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NA "
                android:fontFamily="@font/helveticaneubold"
                android:textSize="20sp"/>
        </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_gravity="center">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:background="@drawable/colour_5"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Transferred Current Date: "

                  android:fontFamily="@font/bentham"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/id_amountTransferCurrentDate"
